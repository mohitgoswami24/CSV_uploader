<head>
    <link rel="stylesheet" type="text/css" href="../css/home.css">
 </head>
 
<div class="nav-bar">
    <a href="" class="back-icon" style="visibility: hidden;">
        <i class="fa-solid fa-circle-arrow-left"></i>
    </a>   
    <div class="title">
        Csv Files Upload
    </div>
</div>

 
<div class="upload-container">
    <div class="center-text">
        <p> See Contents of CSV file into tabular format.</p>
        <h1>Upload File Here: </h1>
        
    </div>

    <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="input-container">
            <input type="file" id="csvFileInput" name="file" accept=".csv">
            <br>
            <input type="submit" class="upload-btn" value="submit"/> 
        </div>
    </form>
</div>


<div class="files-container">  
    <div class="list-center-text">
        <h2>Files</h2>
    </div>
    <div class="files-list">
        <% if(files.length==0) { %>
            <div class="no-file">No files to show!</div>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>View</th>
                    <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let file of files) { %>
                    <tr>
                        <td><%= file.fileName %></td>
                        <td><%= file.createdAt.toLocaleDateString() %></td>
                        <td><a href="/view/<%= file.file %>" class="view-link"><i class="fa-solid fa-eye"></i></a></td>
                        <td><a href="/delete/<%= file.file %>" class="delete-link"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>
